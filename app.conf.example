[app]
# Loglevel can be one of: debug, info, warning, error, critical
loglevel=debug
# Provider ID (UUID) of this service
provider_id=
# URA number that will register the referrals
ura_number=

[scheduler]
# the amount of seconds the update will run in the background
scheduled_delay=5

[metadata_api]
# the base urls of fhir stores (metadata registers)
endpoints=http://lmr-noord:9500,http://lmr-zuid:9500,http://lmr-oost:9500,http://lmr-west:9500
# timeout in seconds
timeout=10
# mtls_cert=secrets/ssl/pseudonym_api.cert
# mtls_key=secrets/ssl/pseudonym_api.key
# mtls_ca=secrets/ssl/pseudonym_api_ca.cert

[pseudonym_api]
endpoint=http://prs-stub:8504
timeout=10
# mtls_cert=secrets/ssl/pseudonym_api.cert
# mtls_key=secrets/ssl/pseudonym_api.key
# mtls_ca=secrets/ssl/pseudonym_api_ca.cert

[referral_api]
endpoint=http://nvi-app:8501
timeout=10
# mtls_cert=secrets/ssl/referral_api.cert
# mtls_key=secrets/ssl/referral_api.key
# mtls_ca=secrets/ssl/referral_api_ca.cert

[uvicorn]
# If true, the api docs will be enabled
swagger_enabled = True
# Endpoint for swagger api docs
docs_url = /docs
# Endpoint for redoc api docs
redoc_url = /redocs
# Host for the uvicorn server
host = 0.0.0.0
# Port for the uvicorn server
port = 8515
# Live reload for uvicorn server
reload = True

# SSL configuration
use_ssl = False
ssl_base_dir = secrets/ssl
ssl_cert_file = server.cert
ssl_key_file = server.key
